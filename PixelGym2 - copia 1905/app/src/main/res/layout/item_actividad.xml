<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_marginHorizontal="16dp"
                                   android:layout_marginVertical="6dp"
                                   app:cardCornerRadius="12dp"
                                   app:cardElevation="2dp"
                                   app:cardBackgroundColor="#252429">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

        <ImageView
                android:id="@+id/ivActividadImagen"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/im_rec_cardio"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
                android:id="@+id/containerTextos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ivFavorito"
                app:layout_constraintStart_toEndOf="@+id/ivActividadImagen"
                app:layout_constraintTop_toTopOf="parent">

            <TextView
                    android:id="@+id/tvActividadNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cardio Express"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/tvActividadCategoria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fitness"
                    android:textColor="#8A8A8E"
                    android:textSize="14sp" />
        </LinearLayout>

        <ImageView
                android:id="@+id/ivFavorito"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@android:drawable/btn_star"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="#8A8A8E" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>