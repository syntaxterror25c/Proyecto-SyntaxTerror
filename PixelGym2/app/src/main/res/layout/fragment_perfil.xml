<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorSurface">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

        <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivPerfilFoto"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/logo"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        <TextView
                android:id="@+id/tvPerfilNombre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/tvPerfilEmail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivPerfilFoto"
                app:layout_constraintTop_toTopOf="@id/ivPerfilFoto"
                tools:text="Oloman de Prueba" />

        <TextView
                android:id="@+id/tvPerfilEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorSecondary"
                app:layout_constraintBottom_toBottomOf="@id/ivPerfilFoto"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvPerfilNombre"
                app:layout_constraintTop_toBottomOf="@id/tvPerfilNombre"
                tools:text="usuario@login.com" />

        <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardInfoSuscripcion"
                style="@style/Widget.Material3.CardView.Elevated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="?attr/colorPrimaryContainer"
                app:layout_constraintTop_toBottomOf="@id/ivPerfilFoto">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp">

                <TextView
                        android:id="@+id/tvLabelPlan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceLabelLarge"
                        tools:text="PLAN PREMIUM" />

                <TextView
                        android:id="@+id/tvPerfilCreditos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceDisplayMedium"
                        android:textColor="?attr/colorPrimary"
                        android:textStyle="bold"
                        tools:text="45" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/creditos_disponibles"
                        android:textAppearance="?attr/textAppearanceTitleSmall" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Material3.CardView.Outlined"
                android:id="@+id/cardDetallesTecnicos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/cardInfoSuscripcion">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/detalles_cuenta"
                        android:textAppearance="?attr/textAppearanceLabelSmall"
                        android:textColor="?attr/colorPrimary"
                        android:layout_marginBottom="8dp"/>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="8dp">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/estado_suscripcion"
                            android:textAppearance="?attr/textAppearanceBodyMedium"/>
                    <TextView
                            android:id="@+id/tvPerfilEstado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:textStyle="bold"
                            tools:text="@string/suscripcion_activa"/>
                </RelativeLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?attr/colorOutlineVariant"/>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="8dp">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fin_plan"
                            android:textAppearance="?attr/textAppearanceBodyMedium"/>
                    <TextView
                            android:id="@+id/tvPerfilInicio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            tools:text="01/01/2026"/>
                </RelativeLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <Button
                android:id="@+id/btnCerrarSesion"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/cerrar_sesion"
                android:textColor="?attr/colorError"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardDetallesTecnicos"
                app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>