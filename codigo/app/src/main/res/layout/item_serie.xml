<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_margin="8dp"
                                   app:cardCornerRadius="12dp"
                                   app:cardElevation="4dp">

    <!-- Contenedor horizontal: imagen + textos + checkbox -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

        <!-- Imagen de la serie -->
        <ImageView
                android:id="@+id/ivImagenSerie"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

        <!-- Textos -->
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tvTituloSerie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="Título de ejemplo" />

            <TextView
                    android:id="@+id/tvDescripcionSerie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp"
                    android:text="Descripción de ejemplo" />
        </LinearLayout>

        <!-- CheckBox de favorito -->
        <CheckBox
                android:id="@+id/cbFavorito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
