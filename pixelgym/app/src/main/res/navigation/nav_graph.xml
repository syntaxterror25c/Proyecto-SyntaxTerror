<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/loginFragment">

    <fragment
            android:id="@+id/loginFragment"
            android:name="com.example.aplicacion.fragments.LoginFragment"
            android:label="LoginFragment"
            tools:layout="@layout/fragment_login">
        <action
                android:id="@+id/action_loginFragment_to_registerFragment"
                app:destination="@id/registerFragment" />

        <action
                android:id="@+id/action_loginFragment_to_listDiscosFragment"
                app:destination="@id/listDiscosFragment"
                app:popUpTo="@id/loginFragment"
                app:popUpToInclusive="true"/>
        <action
                android:id="@+id/action_loginFragment_to_tabListDiscosFragment"
                app:destination="@id/tabListDiscosFragment"
                app:popUpTo="@id/loginFragment"
                app:popUpToInclusive="true"/>

    </fragment>

    <fragment
            android:id="@+id/registerFragment"
            android:name="com.example.aplicacion.fragments.RegisterFragment"
            android:label="RegisterFragment"
            tools:layout="@layout/fragment_register">
        <action
                android:id="@+id/action_registerFragment_to_loginFragment"
                app:destination="@id/loginFragment"
                app:popUpTo="@id/loginFragment"
                app:popUpToInclusive="true"/>
    </fragment>

    <fragment
            android:id="@+id/listDiscosFragment"
            android:name="com.example.aplicacion.fragments.ListSalasFragment"
            android:label="Lista de Discos"
            tools:layout="@layout/fragment_list_salas" />
    <fragment
            android:id="@+id/tabListDiscosFragment"
            android:name="com.example.aplicacion.fragments.TabListSalasFragment"
            android:label="ColecciÃ³n de Discos"
            tools:layout="@layout/fragment_tab_list_salas" />
    <fragment android:id="@+id/contactFragment" android:name="com.example.aplicacion.fragments.ContactFragment"
              android:label="ContactFragment"/>
    <fragment android:id="@+id/listDiscosFavFragment"
              android:name="com.example.aplicacion.fragments.ListSalasFavFragment"
              android:label="ListDiscosFavFragment"/>
    <fragment android:id="@+id/preferencesFragment" android:name="com.example.aplicacion.fragments.PreferencesFragment"
              android:label="PreferencesFragment"/>
</navigation>