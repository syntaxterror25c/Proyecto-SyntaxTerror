<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="6dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

        <ImageView
                android:id="@+id/iv_sala_portada"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:contentDescription="@string/text_imagen_sala"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:src="@color/black" />

        <TextView
                android:id="@+id/tv_sala_titulo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textSize="18sp"
                android:fontFamily="@font/fredoka_one"
                app:layout_constraintStart_toEndOf="@+id/iv_sala_portada"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="@string/text_nombre_sala" />

        <TextView
                android:id="@+id/tv_sala_autor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@id/switch_favorito"
                app:layout_constraintStart_toEndOf="@id/iv_sala_portada"
                app:layout_constraintTop_toBottomOf="@id/tv_sala_titulo"
                tools:text="@string/text_artista" />

        <TextView
                android:id="@+id/tv_sala_ano"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@id/switch_favorito"
                app:layout_constraintStart_toEndOf="@id/iv_sala_portada"
                app:layout_constraintTop_toBottomOf="@+id/tv_sala_autor"
                tools:text="@string/text_ano" />

        <TextView
                android:id="@+id/tv_fav_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fav"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/switch_favorito"
                app:layout_constraintEnd_toEndOf="@+id/switch_favorito"
                app:layout_constraintStart_toStartOf="@+id/switch_favorito" />

        <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_favorito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>